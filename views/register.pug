extends layout

block variables
  - var bodyClass = 'registration-page'
  // Need to change the body class name so the appropriate style is used

block content
  .centered-form
    .form-container
      // Heading for the registration form
      h1 Register
      // Conditional block to display error message if it exists
      if errorMessage
        // Display the error message
        .error
          p #{errorMessage}
      // Form for registration with POST method
      form(action='/register', method='post')
        // Include common elements from another Pug file
        include common-elements.pug
        .form-group
          // Input field for name
          input.form-control(type='text', name='name', placeholder="Enter name")
        // Include email input field
        +emailInput()
        // Include password input field
        +passwordInput()
        .form-group
          // Input field to retype password
          input.form-control(type='password', name='password2', placeholder="Retype Password", required)
        // Include register button
        +registerButton()
      // Link to return to the login page
      a.return-link(href='/login') Return to Login
